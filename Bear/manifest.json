{
    "manifest_version": 2,

    "name": "Clock Plugin",
    "description": "This extension will provide a stopwatch",
    "version": "1.0",

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [ "storage", "activeTab", "scritping"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
        }
    },
    "icons": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
    }
}